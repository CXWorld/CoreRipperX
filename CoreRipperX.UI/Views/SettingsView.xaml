<UserControl x:Class="CoreRipperX.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:helpers="clr-namespace:CoreRipperX.UI.Helpers"
             xmlns:viewmodels="clr-namespace:CoreRipperX.UI.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=viewmodels:SettingsViewModel}">
    <UserControl.Resources>
        <helpers:LoadGroupHeaderConverter x:Key="LoadGroupHeaderConverter" />
        <helpers:AvxGroupHeaderConverter x:Key="AvxGroupHeaderConverter" />
        <CollectionViewSource x:Key="AlgorithmOptionsView"
                              Source="{Binding AlgorithmOptions}">
            <CollectionViewSource.SortDescriptions>
                <componentModel:SortDescription PropertyName="LoadGroupOrder" Direction="Ascending" />
                <componentModel:SortDescription PropertyName="AvxGroupOrder" Direction="Ascending" />
                <componentModel:SortDescription PropertyName="ThreadOrder" Direction="Ascending" />
                <componentModel:SortDescription PropertyName="DisplayName" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="LoadGroupOrder" />
                <PropertyGroupDescription PropertyName="AvxGroupOrder" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="32" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Settings Card -->
        <materialDesign:Card Grid.Row="0" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="24" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="190" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Polling Rate Setting -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Polling Rate (ms)"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                <ComboBox Grid.Row="0" Grid.Column="1"
                          ItemsSource="{Binding Settings.AvailablePollingRates}"
                          SelectedItem="{Binding Settings.PollingRateMs}"
                          Width="120"
                          HorizontalAlignment="Left"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}" />

                <!-- Runtime Setting -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Runtime per Cycle (s)"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Settings.RuntimePerCycleSeconds, UpdateSourceTrigger=PropertyChanged}"
                         Width="120"
                         HorizontalAlignment="Left"
                         materialDesign:HintAssist.Hint="Seconds"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                <!-- Deviation Threshold Setting -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Critical Deviation (%)"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <Slider Value="{Binding Settings.CriticalDeviationPercent}"
                            Minimum="1"
                            Maximum="50"
                            Width="200"
                            VerticalAlignment="Center"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True" />
                    <TextBlock Text="{Binding Settings.CriticalDeviationPercent, StringFormat=N0}"
                               Margin="16,0,0,0"
                               Width="30"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}" />
                    <TextBlock Text="%"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}" />
                </StackPanel>

                <!-- Algorithm Selection -->
                <TextBlock Grid.Row="6" Grid.Column="0"
                           Text="Algorithm"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                <ComboBox Grid.Row="6" Grid.Column="1"
                          ItemsSource="{Binding Source={StaticResource AlgorithmOptionsView}}"
                          DisplayMemberPath="DisplayName"
                          SelectedValuePath="AlgorithmKey"
                          SelectedValue="{Binding Settings.SelectedAlgorithm}"
                          Width="220"
                          HorizontalAlignment="Left"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}">
                    <ComboBox.GroupStyle>
                        <!-- Top-level group: Load category (Light/Medium/Heavy) -->
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,1,0,0"
                                            Margin="8,4,0,0"
                                            Padding="0,8,0,4">
                                        <TextBlock Text="{Binding Name, Converter={StaticResource LoadGroupHeaderConverter}}"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}" />
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.Panel>
                                <ItemsPanelTemplate>
                                    <StackPanel Margin="0,0,0,4" />
                                </ItemsPanelTemplate>
                            </GroupStyle.Panel>
                        </GroupStyle>
                        <!-- Sub-group: AVX type (AVX2/AVX512) -->
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource MaterialDesignToolBarBackground}"
                                            CornerRadius="3"
                                            Margin="8,4,4,2"
                                            Padding="6,2">
                                        <TextBlock Text="{Binding Name, Converter={StaticResource AvxGroupHeaderConverter}}"
                                                   FontSize="11"
                                                   FontWeight="Medium"
                                                   Opacity="0.85" />
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Margin" Value="8,0,0,0" />
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ComboBox.GroupStyle>
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="{x:Type ComboBoxItem}" BasedOn="{StaticResource MaterialDesignComboBoxItemStyle}">
                            <Setter Property="Padding" Value="20,8,8,8" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAvailable}" Value="False">
                                    <Setter Property="Opacity" Value="0.5" />
                                    <Setter Property="FontStyle" Value="Italic" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                </ComboBox>

                <!-- Critical Temperature Setting -->
                <TextBlock Grid.Row="8" Grid.Column="0"
                           Text="Critical Temperature"
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignBody1TextBlock}" />
                <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal">
                    <Slider Value="{Binding Settings.CriticalTemperatureCelsius}"
                            Minimum="60"
                            Maximum="110"
                            Width="200"
                            VerticalAlignment="Center"
                            TickFrequency="5"
                            IsSnapToTickEnabled="True" />
                    <TextBlock Text="{Binding Settings.CriticalTemperatureCelsius, StringFormat=N0}"
                               Margin="16,0,0,0"
                               Width="30"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}" />
                    <TextBlock Text="&#x00B0;C"
                               VerticalAlignment="Center"
                               Style="{StaticResource MaterialDesignBody1TextBlock}" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Stress Test Control Card -->
        <materialDesign:Card Grid.Row="2" Padding="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Status -->
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <TextBlock Text="Stress Test" Style="{StaticResource MaterialDesignHeadline6TextBlock}" />
                    <TextBlock Text="{Binding Status}"
                               Margin="0,8,0,0"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Opacity="0.7" />
                </StackPanel>

                <!-- Progress Bar -->
                <ProgressBar Grid.Row="2" Grid.Column="0"
                             Value="{Binding Progress}"
                             Maximum="100"
                             Height="8"
                             Margin="0,0,24,0"
                             VerticalAlignment="Center" />

                <!-- Buttons -->
                <Button Grid.Row="2" Grid.Column="1"
                        Command="{Binding StartCommand}"
                        Content="START"
                        Margin="0,0,8,0"
                        Style="{StaticResource MaterialDesignRaisedButton}" />

                <Button Grid.Row="2" Grid.Column="2"
                        Command="{Binding StopCommand}"
                        Content="STOP"
                        Style="{StaticResource MaterialDesignOutlinedButton}" />
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
